{
  "manifest_version": 3,
  "name": "Auto Refresh & Keep Screen Awake",
  "version": "2",
  "description": "Automatically refreshes a page and prevents the screen from sleeping.",
  "permissions": [
    "storage",
    "background",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ]
}